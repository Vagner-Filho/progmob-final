<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdicionarCarrinho">


    <ImageView
        android:id="@+id/imagemProduto"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:backgroundTint="#00FFFFFF"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Coca-Cola"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/detalhe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="Detalhes do produto"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/descricaoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Coca Cola lata 350 ML     Coca Cola lata 350 ML         Coca Cola lata 350 ML     Coca Cola lata 350 ML"
        android:textSize="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"/>

    <Spinner
        android:id="@+id/spinnerQuantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/precoProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5,00"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Adicionar ao Carrinho"
        android:textAlignment="center"
        android:textSize="13dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>